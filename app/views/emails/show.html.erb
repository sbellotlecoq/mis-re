<p style="color: green"><%= notice %></p>

<%= turbo_stream_from @email %>
<div id="<%= dom_id(@email) %> ">
<%= render @email %>
</div>

<div>
  <%= link_to "Edit this email", edit_email_path(@email) %> |
  <%= link_to "Back to emails", emails_path %>

  <%= button_to "Destroy this email", @email, method: :delete %>
</div>
